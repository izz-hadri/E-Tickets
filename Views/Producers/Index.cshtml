@model IEnumerable<Producer>

@{
    ViewData["Title"] = "List of Producer";
}

<div class="row">
    <div class="col-md-8 offset-md-2 table-responsive">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="text-center align-middle">
                    <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 50px" />
                    </td>
                    <td class="text-center align-middle">
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td class="text-center align-middle">
                        @Html.DisplayFor(modelItem => item.Bio)
                    </td>
                    <td class="text-center align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Details</a>
                        <a class="btn btn-danger text-white"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>